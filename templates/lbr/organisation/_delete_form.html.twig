<form method="post" action="{{ path('lbr_organisation_delete', {'id': organisation.id}) }}" onsubmit="return confirm('Êtes vous sûre de vouloir supprimer cette organisation ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ organisation.id) }}">
    <button class="btn btn-danger">Supprimer</button>
</form>
