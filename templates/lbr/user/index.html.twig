{% extends 'base.html.twig' %}

{% block title %}Liste utilisateurs{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-12 flex-column">

                <h1>Liste utilisateurs</h1>

            </div>
        </div>
    </div>
</div>


<table id="tableusers" class="table table-striped table-bordered display">
    <thead class="thead-light">
        <tr>

            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        {% for user in users %}
        <tr>

            <td>{{ user.email }}</td>
            
            <td>
                <a href="{{ path('lbr_user_show', {'id': user.id}) }}"><button type="button" class="btn btn-primary"><span
                            class="text-white">Voir</span></button></a>

                <a href="{{ path('lbr_user_edit', {'id': user.id}) }}"><button type="button" class="btn btn-warning"><span
                            class="text-white">Editer</span></button></a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">Aucun utilisateur</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('lbr_user_new') }}"><button type="button" class="btn btn-success">Ajouter
        un utilisateur</button></a>

{% endblock %}