{% extends 'base.html.twig' %}

{% block title %}Liste Evenement{% endblock %}

{% block body %}
    
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-12 flex-column mt-5">

                <h1>Liste Evenement</h1>

            </div>
        </div>
    </div>
</div>


    <table class="table">
        <thead class="thead-light">
            <tr>
            
                <th>Nom</th>
                <th>Date</th>
                <th>Note</th>
                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                
                <td>{{ evenement.nom }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.note }}</td>
                
                <td>
                    <a href="{{ path('lbr_evenement_show', {'id': evenement.id}) }}"><button type="button" class="btn btn-primary"><span class="text-white">Voir</span></button></a>
                    
                    <a href="{{ path('lbr_evenement_edit', {'id': evenement.id}) }}"><button type="button" class="btn btn-warning"><span class="text-white">Editer</span></button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun Evenement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

     <button type="button" class="btn btn-success"><a href="{{ path('lbr_evenement_new') }}"><span class="text-white">Ajouter un Evenement</a></span></button>
{% endblock %}

