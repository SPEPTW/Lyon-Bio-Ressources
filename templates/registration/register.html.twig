{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}

<link rel="stylesheet" type="text/css" href="css/register.css">

<div class="text-left">
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        
                        <h5 class="card-title text-center">Ajouter un utlisateur</h5>
                        <form class="form-signin">
                            <div class="form-label-group p-2">
                                {{ form_row(registrationForm.email) }}
                            </div>

                            <div class="form-label-group p-2">
                                {{ form_row(registrationForm.plainPassword) }}
                            </div>

                            <button class="btn btn-lg btn-success btn-block" type "submit">Ajouter l'utilisateur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}